<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Appearance Settings -->
    <PreferenceCategory android:title="Appearance">
        <ListPreference
            android:key="theme_color"
            android:title="Theme Color"
            android:summary="Select the theme color" />
    </PreferenceCategory>

    <!-- Notification Settings -->
    <PreferenceCategory android:title="Notifications">
        <SwitchPreferenceCompat
            android:key="enable_notifications"
            android:title="Enable Notifications"
            android:summary="Receive notifications about expiring ingredients"
            android:defaultValue="true" />

        <ListPreference
            android:key="notification_timing"
            android:title="Notification Timing"
            android:summary="Choose when to be notified before ingredients expire"
            android:entries="@array/notification_timing_entries"
            android:entryValues="@array/notification_timing_values"
            android:defaultValue="3"
            android:dependency="enable_notifications" />
    </PreferenceCategory>

    <!-- Privacy Settings -->
    <PreferenceCategory android:title="Privacy">
        <CheckBoxPreference
            android:key="share_data"
            android:title="Share Data"
            android:summary="Allow sharing data with third parties" />
    </PreferenceCategory>

    <!-- Account Management -->
    <PreferenceCategory android:title="Account Management">
        <EditTextPreference
            android:key="user_name"
            android:title="Change Email Address"
            android:summary="Change your account email"
            android:dialogTitle="New Email" />

        <Preference
            android:key="change_password"
            android:title="Change Password"
            android:summary="Change your account password" />

        <Preference
            android:key="logout"
            android:title="Log Out"
            android:summary="Log out of your account" />

        <SwitchPreferenceCompat
            android:key="enable_biometrics"
            android:title="Enable Face Scan Biometrics"
            android:summary="Use your face/fingerprint as an extra security layer for scan to sign in"
            android:defaultValue="false" />
    </PreferenceCategory>

    <!-- Help & Support -->
    <PreferenceCategory android:title="Help &amp; Support">
        <Preference
            android:key="help_support"
            android:title="Help &amp; Support"
            android:summary="Get help and contact support" />
    </PreferenceCategory>

    <!-- Data Management -->
    <PreferenceCategory android:title="Data Management">
        <Preference
            android:key="clear_cache"
            android:title="Clear Cache"
            android:summary="Clear cached data" />
    </PreferenceCategory>
</PreferenceScreen>