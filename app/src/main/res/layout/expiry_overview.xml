<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="349dp"
        android:layout_height="73dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#3C3E42"
        android:padding="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal">

            <!-- Fresh TextView and Icon -->
            <TextView
                android:id="@+id/fresh_txt"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="0"

                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Fresh ingredients"
                android:src="@drawable/favicon_fresh" />

            <!-- Expiring Soon TextView and Icon -->
            <TextView
                android:id="@+id/tv_warning"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <!-- Expired TextView and Icon -->
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Ingredients expiring soon"
                android:src="@drawable/favicon_warning" />

            <TextView
                android:id="@+id/tv_expired"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Expired ingredients"
                android:src="@drawable/favicon_expired" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>